{
    "id": "nodebb-plugin-emailer-ssl-smtp",
    "url": "https://github.com/erlgo/nodebb-plugin-emailer-ssl-smtp",
    "name": "Emailer (Local)",
    "description": "Allows NodeBB to send emails via SMTP ssl",
    "library": "./index.js",
    "templates": "./templates",
    "hooks": [
        { "hook": "action:email.send", "method": "send" },
        { "hook": "filter:admin.header.build", "method": "admin.menu" },
        { "hook": "static:app.load", "method": "init"}
    ],
    "compatibility": "~0.6.0"
}
